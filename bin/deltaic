import os
import sys
import yaml

from deltaic.command import parser

if __name__ == '__main__':
    if os.geteuid() == 0:
        raise OSError('Do not run as root!')
    args = parser.parse_args()
    with open(args.config_file) as fh:
        config = yaml.safe_load(fh)
    ret = args.func(config, args)
    sys.exit(ret or 0)
